/**app.wxss**/
/* 全局重置样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  background-color: #fff;
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 按钮样式 */
.btn-primary {
  background-color: #ff6b35;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.btn-secondary {
  background-color: #fff;
  color: #ff6b35;
  border: 2rpx solid #ff6b35;
  border-radius: 8rpx;
  padding: 18rpx 38rpx;
  font-size: 32rpx;
}

/* 文本样式 */
.text-primary {
  color: #ff6b35;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-danger {
  color: #e74c3c;
}

.text-success {
  color: #27ae60;
}

/* 价格样式 */
.price {
  color: #ff6b35;
  font-weight: bold;
}

.price-large {
  font-size: 36rpx;
}

.price-small {
  font-size: 28rpx;
}

/* 徽章样式 */
.badge {
  background-color: #ff6b35;
  color: #fff;
  border-radius: 12rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  display: inline-block;
}

.badge-success {
  background-color: #27ae60;
}

.badge-warning {
  background-color: #f39c12;
}

.badge-danger {
  background-color: #e74c3c;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.m-0 { margin: 0; }
.m-1 { margin: 10rpx; }
.m-2 { margin: 20rpx; }
.m-3 { margin: 30rpx; }

.mt-0 { margin-top: 0; }
.mt-1 { margin-top: 10rpx; }
.mt-2 { margin-top: 20rpx; }
.mt-3 { margin-top: 30rpx; }

.mb-0 { margin-bottom: 0; }
.mb-1 { margin-bottom: 10rpx; }
.mb-2 { margin-bottom: 20rpx; }
.mb-3 { margin-bottom: 30rpx; }

.p-0 { padding: 0; }
.p-1 { padding: 10rpx; }
.p-2 { padding: 20rpx; }
.p-3 { padding: 30rpx; }

/* 文本对齐 */
.text-left { text-align: left; }
.text-center { text-align: center; }
.text-right { text-align: right; }

/* 字体大小 */
.font-small { font-size: 24rpx; }
.font-normal { font-size: 28rpx; }
.font-large { font-size: 32rpx; }
.font-xl { font-size: 36rpx; }

/* 圆角 */
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 12rpx; }
.rounded-full { border-radius: 50%; }
