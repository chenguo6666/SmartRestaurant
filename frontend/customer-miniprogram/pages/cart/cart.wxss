/* 购物车页面样式 */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 头部栏 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.header-title {
  font-weight: bold;
  font-size: 32rpx;
}

.clear-btn {
  background: none;
  border: none;
  color: white;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  background-color: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.clear-btn:disabled {
  opacity: 0.5;
}

.clear-btn:not(:disabled):active {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 主容器 */
.cart-container {
  flex: 1;
  padding-top: 120rpx;
  padding-bottom: 160rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 空状态样式 */
.cart-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.cart-empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.cart-empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 60rpx;
  text-align: center;
  line-height: 1.5;
}

.go-shopping-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.go-shopping-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.3);
}

/* 购物车商品列表 */
.cart-items {
  padding: 0 30rpx;
}

.cart-item {
  display: flex;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  align-items: center;
  transition: all 0.3s ease;
}

.cart-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.cart-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.cart-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cart-item-name {
  font-weight: bold;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.cart-item-price {
  color: #FF5722;
  font-weight: bold;
  font-size: 36rpx;
}

/* 商品操作区域 */
.cart-item-actions {
  display: flex;
  align-items: center;
}

.quantity-control {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 8rpx;
  margin-right: 30rpx;
}

.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: none;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.decrease-btn {
  background-color: #f0f0f0;
  color: #666;
}

.decrease-btn:active {
  background-color: #e0e0e0;
  transform: scale(0.9);
}

.increase-btn {
  background-color: #4CAF50;
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.increase-btn:active {
  background-color: #45a049;
  transform: scale(0.9);
}

.quantity {
  margin: 0 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  min-width: 40rpx;
  text-align: center;
  color: #333;
}

.delete-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  color: #999;
  border: none;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.delete-btn:active {
  background-color: #ff5722;
  color: white;
  transform: scale(0.9);
}

/* 结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 90;
}

.total-info {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 32rpx;
  color: #666;
}

.total-price {
  font-size: 40rpx;
  color: #FF5722;
  font-weight: bold;
  margin-left: 8rpx;
}

.checkout-btn {
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.checkout-btn:active {
  transform: translateY(2rpx);
  background: linear-gradient(135deg, #45a049, #5cb85c);
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.3);
} 